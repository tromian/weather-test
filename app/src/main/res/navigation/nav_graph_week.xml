<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_week"
    app:startDestination="@id/weekFragment">

    <fragment
        android:id="@+id/weekFragment"
        android:name="com.tromian.test.weather.ui.week.WeekFragment"
        android:label="fragment_week"
        tools:layout="@layout/fragment_week">
        <action
            android:id="@+id/action_weekFragment_to_detailsFragment"
            app:destination="@id/detailsFragment2" />
        <argument
            android:name="dailyWeather"
            app:argType="com.tromian.test.weather.data.daily.DailyWeather" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment2"
        android:name="com.tromian.test.weather.ui.details.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_daily_details">
        <argument
            android:name="dailyWeather"
            app:argType="com.tromian.test.weather.data.daily.DailyWeather" />
    </fragment>
</navigation>